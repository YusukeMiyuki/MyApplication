<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfCustomControls.MyTextBox">
    
    <Style TargetType="{x:Type local:TextBoxEx}" BasedOn="{StaticResource {x:Type TextBox}}">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True" />
            <Trigger Property="Background" Value="#3c3c3c" />
        </Style.Triggers>
    </Style>
</ResourceDictionary>